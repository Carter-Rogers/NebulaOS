@using Nebula_OS.Components.Components
@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout Style="background: url('/desktop-bg.jpeg'); background-size: cover;">
    <MudMainContent Style="padding-top: 0;">
        
        <MudGrid>
            <MudItem xs="12" Style="@($"background-color: rgba(255, 255, 255, 0)")">
                
                <NavMenu/>

            </MudItem>
            <MudItem xs="12" Style="@($"background-color: rgba(255, 255,255, 0); height: 100%;  justify-content: center;")">
                @Body
            </MudItem>
        </MudGrid>

    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }



}