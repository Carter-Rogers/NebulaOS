

@if(isVisible)
{
  <div style="width: 65%; margin: 0 auto; height: 60%; padding: 5px; background-color: rgba(155, 155, 155, 0.6); border-radius: 10px; display: block;">

    <div style="width: 100%; float: left; text-align: right;">
      <MudButton OnClick="Close">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>

      </MudButton>
    </div>

  </div>
}



@code {
  public static bool isVisible { get; set; } = false;

  [Inject]
  protected IJSRuntime JSRuntime { get; set; }

  [JSInvokable]
  public static async Task OpenSettingsWindow()
  {
    isVisible = true;
    _Settings?.StateHasChanged();
  }

  public async Task Close()
  {
    isVisible = false;
  }

}
